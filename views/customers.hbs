<div class="container">
    <div class="row">
      <div class="col-10">
        <h1>List of customers</h1>
        <button><a href="/newcustomer">Add New Customer</a></button>
      </div>
    </div>

    <!-- put your form here -->
    
    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>First name</th>
              <th>Last name</th>
              <th>Email</th>
            </tr>
          </thead>
          <tbody id="rows">
          {{#each objJson}}
            <tr>  
              <th scope="row"><a class="id-link" href="{{this.id}}">{{ this.id }}</a></th>
              <td>{{ this.title}}</td>
              <td>{{ this.firstname }}</td>
              <td>{{ this.surname }}</td>
              <td>{{ this.email }}</td>
              <td> <button> edit </button></td>
              <!-- add a delete button here -->
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
